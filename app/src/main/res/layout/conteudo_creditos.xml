<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/app_bar_creditos"
    tools:context="com.soccer.ghsvi.jsoccercc.CreditosActivity"
    android:orientation="vertical"
    android:layout_marginTop="80dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="5dp"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/AppColor"
        />

    <TextView
        android:id="@+id/textCredits1"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:textColor="#37474F"
        android:textSize="20dp"
        android:text="Icons from Search Menu:"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/textCredits2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:text="@string/txtCreditsIconAuthor"/>
    <TextView
        android:id="@+id/textCredits3"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:text="@string/txtCreditsIconSite"/>
    <TextView
        android:id="@+id/textCredits4"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:text="@string/txtCreditsIconCompl"/>
    <TextView
        android:id="@+id/textCredits5"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:textSize="12dp"
        android:text="Thanks for providing the icons for the application.
" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/AppColor"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/textTheSportsDB1"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="The Sports DB:"/>
    <TextView
        android:id="@+id/textTheSportsDB2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:text="@string/txtSportsDB"/>

    <TextView
        android:id="@+id/textTheSportsDB3"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:textSize="12dp"
        android:text="Thanks for providing the API." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/AppColor"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/textCredits6"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:textColor="#37474F"
        android:textSize="20dp"
        android:text="Major Orienting Professor Rodrigo Grassi Martins:"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textCredits7"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:text="No online references."/>

    <TextView
        android:id="@+id/textCredits8"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#37474F"
        android:textSize="12dp"
        android:text="Thanks for providing the theme and guidance trought this project." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/AppColor"
        android:layout_marginTop="30dp"
        />
</LinearLayout>
